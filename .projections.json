{
    "piper/*.py": {
        "alternate": "test/test_{}.py",
        "type": "source"
    },
    "test/test_*.py": {
        "alternate": "piper/{}.py",
        "type": "test"
    },

    "piper/cli/*.py": {
        "alternate": "test/cli/test_{}.py",
        "type": "source"
    },
    "test/cli/test_*.py": {
        "alternate": "piper/cli/{}.py",
        "type": "test"
    },

    "piper/db/*.py": {
        "alternate": "test/db/test_{}.py",
        "type": "source"
    },
    "test/db/test_*.py": {
        "alternate": "piper/db/{}.py",
        "type": "test"
    },

    "piper/api/*.py": {
        "alternate": "test/api/test_{}.py",
        "type": "source"
    },
    "test/api/test_*.py": {
        "alternate": "piper/api/{}.py",
        "type": "test"
    },
}
